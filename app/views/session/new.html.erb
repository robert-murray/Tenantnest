<div id="loginSignupContainer">

<h1>Welcome</h1>
<h5>Login with your details below</h5>

  <%= form_tag '/login', :autocomplete => "off" do %>
  <%= label_tag 'email' %>
  <%= text_field_tag :email, nil, :autofocus => true, :required => true %>
  <%= label_tag 'Password' %>
  <%= password_field_tag :password, nil, :required => true %>

  <b>I am an:</b>
  <p><%= radio_button_tag(:user_type, "occupant") %> Occupant <%= radio_button_tag(:user_type, "agent") %> Agent </p>
  <button> Log in <i class="fa fa-sign-in"></i></button>
  <%= link_to 'Sign up', new_tenant_path, :class => 'button button-outline' %>

<% end %>


</div>